{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-useless-escape": ["off"],
    "semi": ["error", "always"],
    "no-console": ["off"],
    "comma-dangle": ["error", "always-multiline"]
  }
}
